{
    "name": "quarto-dashboard-dev",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": ".",
        "args": {
            "PROJECT_NAME": "quarto_dashboard",
            "VENV_NAME": "R_ENV",
            "R_VERSION_MAJOR": "4",
            "R_VERSION_MINOR": "3",
            "R_VERSION_PATCH": "2",
            "CRAN_MIRROR": "https://cran.rstudio.com/",
            "QUARTO_VER": "1.4.549"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Docs/text files
                "quarto.quarto",
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                // Docker
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                // Python
                "ms-python.python",
                "ms-toolsai.jupyter",
                // R
                "rdebugger.r-debugger",
                "reditorsupport.r",
                "REditorSupport.r-lsp"
            ]
        },
        "settings": {
            "files.associations": {
                "*.Rmd": "rmd"
            }
        }
    },
    "postCreateCommand": "radian"
}